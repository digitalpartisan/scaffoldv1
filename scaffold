#!/usr/bin/bash

readonly SCAFFOLD_PATH=$(dirname "$0")
readonly SCAFFOLD_PROGRAM_PATH=$SCAFFOLD_PATH/scaffold
readonly SCAFFOLD_BOOTSTRAP_PATH=$SCAFFOLD_PATH/bootstrap.sh
source "$SCAFFOLD_BOOTSTRAP_PATH"

if [[ -z $1 ]]
then
	SCAFFOLD_COMMAND=$SCAFFOLD_CONFIG_COMMAND_DEFAULT
else
	SCAFFOLD_COMMAND=$1
fi
SCAFFOLD_COMMAND_PATH=${SCAFFOLD_CONFIG_PATH_COMMANDS}/${SCAFFOLD_COMMAND}.sh

if [[ -f $SCAFFOLD_COMMAND_PATH ]]
then
	source "$SCAFFOLD_COMMAND_PATH"
else
	source "$SCAFFOLD_CONFIG_PATH_COMMANDS/$SCAFFOLD_CONFIG_COMMAND_DEFAULT.sh"
fi

exit 0
